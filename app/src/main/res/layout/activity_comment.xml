<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/newsfeed_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/feed_item_bg"
        android:layout_marginBottom="15dp" >

        <EditText
            android:id="@+id/editText_newComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Post your comment here..."
            android:inputType="textMultiLine"
            android:paddingBottom="@dimen/feed_item_status_pad_top"
            android:paddingLeft="@dimen/feed_item_status_pad_left_right"
            android:paddingRight="@dimen/feed_item_status_pad_left_right"
            android:paddingTop="@dimen/feed_item_status_pad_top" />

        <ImageButton
            android:id="@+id/imageButton_commentDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listView_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/feed_bg" />

</LinearLayout>
